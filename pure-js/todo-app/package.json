{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "Pure JavaScript Todo App with Node.js backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:otel": "OTEL_SERVICE_NAME=${OTEL_SERVICE_NAME:-todo-app} OTEL_TRACES_EXPORTER=${OTEL_TRACES_EXPORTER:-console} OTEL_EXPORTER_OTLP_ENDPOINT=${OTEL_EXPORTER_OTLP_ENDPOINT:-http://localhost:4318} OTEL_EXPORTER_OTLP_PROTOCOL=${OTEL_EXPORTER_OTLP_PROTOCOL:-http/protobuf} NODE_OPTIONS='--require @opentelemetry/auto-instrumentations-node/register' node server.js",
    "dev": "nodemon server.js",
    "dev:otel": "OTEL_SERVICE_NAME=${OTEL_SERVICE_NAME:-todo-app} OTEL_TRACES_EXPORTER=${OTEL_TRACES_EXPORTER:-console} OTEL_EXPORTER_OTLP_ENDPOINT=${OTEL_EXPORTER_OTLP_ENDPOINT:-http://localhost:4318} OTEL_EXPORTER_OTLP_PROTOCOL=${OTEL_EXPORTER_OTLP_PROTOCOL:-http/protobuf} NODE_OPTIONS='--require @opentelemetry/auto-instrumentations-node/register' nodemon server.js"
  },
  "keywords": ["todo", "javascript", "nodejs"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.3",
    "@opentelemetry/exporter-trace-otlp-http": "^0.208.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
